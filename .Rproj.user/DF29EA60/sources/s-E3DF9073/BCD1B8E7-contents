# "religiosity"
religious_vars <- c('supernatural',
                    'religious_leader',
                    'costly_ritual',
                    'advice',
                    'learned_revelation',
                    'divination')

# "efficacious services"
efficacy_vars <- c(
  'evidence_success',
  'reputation_efficacy',
  'patronage_based_efficacy')

# evidence against "efficacious services"
anti_efficacy_vars <- c('evidence_failure',
                        'anti_reputation_efficacy')

# "characterizing the markets"
market_vars <- c(
  'receives_payment',
  'distributed_expertise',
  'narrow_specialist',
  'rare_knowledge',
  'uncommon_serious')

# "mentorship"
mentor_vars <- c('prestige',
                 'trust',
